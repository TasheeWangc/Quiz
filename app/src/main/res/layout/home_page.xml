<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/ham_sign"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_dehaze_24"
        />
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/baseline_shopping_cart_24"
        />
    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_search_24"
        android:inputType="text"
        android:layout_below="@+id/ham_sign"
        android:background="#30ffffff"
        android:textColor="@color/white"
        android:layout_margin="25dp"
        android:hint="Search"
        android:textColorHint="@color/white"
        android:textSize="25sp"
        />

    <ImageView
        android:id="@+id/aids"
        android:layout_width="352dp"
        android:layout_height="256dp"
        android:layout_below="@id/search"
        android:layout_centerHorizontal="true"
        android:src="@drawable/food"
        />
    <TextView
        android:id="@+id/shopby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aids"
        android:text="Shop by Category"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/shopby"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_margin="">
       <ImageView
           android:layout_width="65dp"
           android:layout_height="65dp"
           android:layout_margin="20dp"
           android:src="@drawable/baseline_bedroom_parent_24"/>
       <ImageView
           android:layout_width="65dp"
           android:layout_height="65dp"
           android:layout_margin="20dp"
           android:src="@drawable/baseline_car_rental_24"/>
       <ImageView
           android:layout_width="65dp"
           android:layout_height="65dp"
           android:layout_margin="20dp"
           android:src="@drawable/baseline_cake_24"/>

       


   </LinearLayout>

</RelativeLayout>